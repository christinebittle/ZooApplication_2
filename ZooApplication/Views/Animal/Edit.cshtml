@model ZooApplication.Models.AnimalDto

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Animal</h2>

<form method="POST" action="/Animal/Update/@Model.AnimalID">
    <input type="text" style="display:none;" name="AnimalId" value="@Model.AnimalID" />
    <div>
        <label>Name</label>
        <input type="text" name="AnimalName" value="@Model.AnimalName" />
    </div>
    <div>
        <label>Weight</label>
        <input type="text" name="AnimalWeight" value="@Model.AnimalWeight" />
    </div>
    <div>
        <label>Species</label>
        <input type="text" name="SpeciesId" value="@Model.SpeciesId" />
    </div>
    <div>

        <input type="submit" value="Update" />
    </div>

</form>

